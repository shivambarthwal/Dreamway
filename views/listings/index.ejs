    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.5rem;
            opacity: 0.8;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .filter p{
            font-size: 0.8rem;
        }

        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            margin-left: 3rem;
            display: flex;
            align-items: center;
        }
    
    </style>
    <div id="filters">
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i></div>
